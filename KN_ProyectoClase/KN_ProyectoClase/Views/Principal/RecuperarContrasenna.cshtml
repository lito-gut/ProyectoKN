@model KN_ProyectoClase.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Olvidaste tu contraseña?</h1>
                                <p class="mb-4">
                                    Ingresa tu correo y te enviaremos un link para restablecer tu contraseña!
                                </p>
                            </div>
                            <form class="user">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user"
                                           id="exampleInputEmail" aria-describedby="emailHelp"
                                           placeholder="Ingresa tu correo electrónico">
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Restablecer Contraseña">

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("RegistrarCuenta","Principal")">Crear una Cuenta!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("IniciarSesion","Principal")">Iniciar Sesión!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Inicio","Principal")">Pantalla Principal!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>



